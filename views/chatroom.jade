extends layout

block append head
  //io.listen cria um handler no servidor para que ele sirva o socket.io.js como arquivo
  script(type='text/javascript', src='/socket.io/socket.io.js') 
  script(type='text/javascript', src='/javascripts/chat.js')

block content
  section#chatroom
    div#messages
    input#message(type='text', placeholder='Enter your message here')
    input#send(type='button', value='Send')

    section#nameform.modal
      div.backdrop
      div.popup
        div.pophead Please enter a nickname
        div.popbody
          input#nickname(type='text' autofocus)
          input#setname(type='button', value='Set Name')

